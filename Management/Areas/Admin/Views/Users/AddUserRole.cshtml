@model Management.Areas.Admin.Models.Dtos.Roles.AddUserRoleDto
@{
    ViewData["Title"] = "AddUserRole";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Form Elements</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Form Design <small>different form elements</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <form asp-action="AddUserRole" method="post">
                    <div class="row">
                        <div class="col-md-12 ">
                            <div class="x_panel">
                                <p>
                                    You are about to add a new role to the user:
                                    <text>@Model.FullName</text> ||
                                    <span>with the email address of :</span>
                                    <text>@Model.Email</text>
                                    <span>...</span>
                                </p>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Id" type="hidden" class="form-control" />
                                </div>
                                <div class="x_content" style="display: block;">
                                    <label>Role :</label>
                                    <select type="text" asp-for="Role" asp-items="Model.Roles" class="form-control parsley-success" required=""></select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>